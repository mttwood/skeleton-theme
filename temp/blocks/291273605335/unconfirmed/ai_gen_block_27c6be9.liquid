{% doc %}
  @prompt
    Create an accessible mobile hamburger menu for the header with proper semantic HTML structure. The navigation element should not be hidden from screen readers. The hamburger button must sit inside the nav element for proper accessibility. The menu should be positioned in the header and display a hamburger icon on mobile devices that opens a slide-out or dropdown menu showing navigation items. Ensure proper ARIA labels and semantic markup for accessibility compliance.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-mobile-nav-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    background-color: {{ block.settings.header_bg_color }};
    padding: {{ block.settings.header_padding }}px 20px;
  }

  .ai-mobile-nav__container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-mobile-nav__logo-{{ ai_gen_id }} {
    font-size: {{ block.settings.logo_size }}px;
    font-weight: 700;
    color: {{ block.settings.logo_color }};
    text-decoration: none;
  }

  .ai-mobile-nav__toggle-{{ ai_gen_id }} {
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
    transition: opacity 0.2s ease;
  }

  .ai-mobile-nav__toggle-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-mobile-nav__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
  }

  .ai-mobile-nav__icon-line-{{ ai_gen_id }} {
    width: 100%;
    height: 2px;
    background-color: currentColor;
    transition: all 0.3s ease;
    transform-origin: center;
  }

  .ai-mobile-nav__toggle-{{ ai_gen_id }}[aria-expanded="true"] .ai-mobile-nav__icon-line-{{ ai_gen_id }}:nth-child(1) {
    transform: translateY(calc({{ block.settings.icon_size }}px / 2 - 1px)) rotate(45deg);
  }

  .ai-mobile-nav__toggle-{{ ai_gen_id }}[aria-expanded="true"] .ai-mobile-nav__icon-line-{{ ai_gen_id }}:nth-child(2) {
    opacity: 0;
  }

  .ai-mobile-nav__toggle-{{ ai_gen_id }}[aria-expanded="true"] .ai-mobile-nav__icon-line-{{ ai_gen_id }}:nth-child(3) {
    transform: translateY(calc(-{{ block.settings.icon_size }}px / 2 + 1px)) rotate(-45deg);
  }

  .ai-mobile-nav__menu-{{ ai_gen_id }} {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background-color: {{ block.settings.menu_bg_color }};
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .ai-mobile-nav__menu-{{ ai_gen_id }}[data-open="true"] {
    max-height: 500px;
  }

  .ai-mobile-nav__list-{{ ai_gen_id }} {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .ai-mobile-nav__item-{{ ai_gen_id }} {
    border-bottom: 1px solid {{ block.settings.divider_color }};
  }

  .ai-mobile-nav__item-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-mobile-nav__link-{{ ai_gen_id }} {
    display: block;
    padding: {{ block.settings.link_padding }}px 20px;
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.link_size }}px;
    transition: background-color 0.2s ease;
  }

  .ai-mobile-nav__link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.link_hover_bg }};
  }

  @media screen and (min-width: 750px) {
    .ai-mobile-nav__toggle-{{ ai_gen_id }} {
      display: none;
    }

    .ai-mobile-nav__menu-{{ ai_gen_id }} {
      position: static;
      max-height: none;
      overflow: visible;
      box-shadow: none;
      background-color: transparent;
    }

    .ai-mobile-nav__list-{{ ai_gen_id }} {
      display: flex;
      gap: {{ block.settings.desktop_gap }}px;
    }

    .ai-mobile-nav__item-{{ ai_gen_id }} {
      border-bottom: none;
    }

    .ai-mobile-nav__link-{{ ai_gen_id }} {
      padding: 8px 12px;
    }

    .ai-mobile-nav__link-{{ ai_gen_id }}:hover {
      background-color: transparent;
      opacity: 0.7;
    }
  }
{% endstyle %}

<mobile-nav-{{ ai_gen_id }} class="ai-mobile-nav-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-mobile-nav__container-{{ ai_gen_id }}">
    <a href="/" class="ai-mobile-nav__logo-{{ ai_gen_id }}">
      {{ block.settings.logo_text }}
    </a>

    <nav aria-label="{{ block.settings.nav_label }}">
      <button
        class="ai-mobile-nav__toggle-{{ ai_gen_id }}"
        aria-expanded="false"
        aria-controls="ai-mobile-nav-menu-{{ ai_gen_id }}"
        aria-label="{{ block.settings.menu_button_label }}"
      >
        <span class="ai-mobile-nav__icon-{{ ai_gen_id }}">
          <span class="ai-mobile-nav__icon-line-{{ ai_gen_id }}"></span>
          <span class="ai-mobile-nav__icon-line-{{ ai_gen_id }}"></span>
          <span class="ai-mobile-nav__icon-line-{{ ai_gen_id }}"></span>
        </span>
      </button>

      <div
        id="ai-mobile-nav-menu-{{ ai_gen_id }}"
        class="ai-mobile-nav__menu-{{ ai_gen_id }}"
        data-open="false"
      >
        <ul class="ai-mobile-nav__list-{{ ai_gen_id }}">
          {% if block.settings.link_1_text != blank %}
            <li class="ai-mobile-nav__item-{{ ai_gen_id }}">
              <a href="{{ block.settings.link_1_url }}" class="ai-mobile-nav__link-{{ ai_gen_id }}">
                {{ block.settings.link_1_text }}
              </a>
            </li>
          {% endif %}
          {% if block.settings.link_2_text != blank %}
            <li class="ai-mobile-nav__item-{{ ai_gen_id }}">
              <a href="{{ block.settings.link_2_url }}" class="ai-mobile-nav__link-{{ ai_gen_id }}">
                {{ block.settings.link_2_text }}
              </a>
            </li>
          {% endif %}
          {% if block.settings.link_3_text != blank %}
            <li class="ai-mobile-nav__item-{{ ai_gen_id }}">
              <a href="{{ block.settings.link_3_url }}" class="ai-mobile-nav__link-{{ ai_gen_id }}">
                {{ block.settings.link_3_text }}
              </a>
            </li>
          {% endif %}
          {% if block.settings.link_4_text != blank %}
            <li class="ai-mobile-nav__item-{{ ai_gen_id }}">
              <a href="{{ block.settings.link_4_url }}" class="ai-mobile-nav__link-{{ ai_gen_id }}">
                {{ block.settings.link_4_text }}
              </a>
            </li>
          {% endif %}
          {% if block.settings.link_5_text != blank %}
            <li class="ai-mobile-nav__item-{{ ai_gen_id }}">
              <a href="{{ block.settings.link_5_url }}" class="ai-mobile-nav__link-{{ ai_gen_id }}">
                {{ block.settings.link_5_text }}
              </a>
            </li>
          {% endif %}
        </ul>
      </div>
    </nav>
  </div>
</mobile-nav-{{ ai_gen_id }}>

<script>
  (function() {
    class MobileNav{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.toggle = this.querySelector('.ai-mobile-nav__toggle-{{ ai_gen_id }}');
        this.menu = this.querySelector('.ai-mobile-nav__menu-{{ ai_gen_id }}');
        this.links = this.querySelectorAll('.ai-mobile-nav__link-{{ ai_gen_id }}');
        
        if (this.toggle && this.menu) {
          this.setupEventListeners();
        }
      }

      setupEventListeners() {
        this.toggle.addEventListener('click', () => {
          this.toggleMenu();
        });

        this.links.forEach(link => {
          link.addEventListener('click', () => {
            this.closeMenu();
          });
        });

        document.addEventListener('click', (event) => {
          if (!this.contains(event.target)) {
            this.closeMenu();
          }
        });

        document.addEventListener('keydown', (event) => {
          if (event.key === 'Escape' && this.menu.getAttribute('data-open') === 'true') {
            this.closeMenu();
            this.toggle.focus();
          }
        });
      }

      toggleMenu() {
        const isOpen = this.menu.getAttribute('data-open') === 'true';
        
        if (isOpen) {
          this.closeMenu();
        } else {
          this.openMenu();
        }
      }

      openMenu() {
        this.menu.setAttribute('data-open', 'true');
        this.toggle.setAttribute('aria-expanded', 'true');
      }

      closeMenu() {
        this.menu.setAttribute('data-open', 'false');
        this.toggle.setAttribute('aria-expanded', 'false');
      }
    }

    customElements.define('mobile-nav-{{ ai_gen_id }}', MobileNav{{ ai_gen_id }});
  })();
</script>

