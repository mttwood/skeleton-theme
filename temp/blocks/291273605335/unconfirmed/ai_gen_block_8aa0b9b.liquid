{% doc %}
  @prompt
    Create a mobile hamburger menu for the header that displays a hamburger icon (three horizontal lines) on mobile devices. When tapped, it should open a slide-out or dropdown navigation menu showing the menu items. The hamburger menu should be responsive and only appear on mobile/tablet screens, while the regular horizontal menu displays on desktop.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hamburger-menu-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
  }

  .ai-hamburger-menu__container-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-hamburger-menu__desktop-nav-{{ ai_gen_id }} {
    display: none;
  }

  .ai-hamburger-menu__mobile-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: {{ block.settings.header_padding }}px;
    background-color: {{ block.settings.header_bg_color }};
  }

  .ai-hamburger-menu__logo-{{ ai_gen_id }} {
    font-size: {{ block.settings.logo_size }}px;
    font-weight: 700;
    color: {{ block.settings.text_color }};
    text-decoration: none;
  }

  .ai-hamburger-menu__toggle-{{ ai_gen_id }} {
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.hamburger_line_spacing }}px;
    z-index: 1001;
  }

  .ai-hamburger-menu__toggle-line-{{ ai_gen_id }} {
    width: {{ block.settings.hamburger_size }}px;
    height: {{ block.settings.hamburger_thickness }}px;
    background-color: {{ block.settings.hamburger_color }};
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .ai-hamburger-menu__toggle-{{ ai_gen_id }}.active .ai-hamburger-menu__toggle-line-{{ ai_gen_id }}:nth-child(1) {
    transform: translateY(calc({{ block.settings.hamburger_thickness }}px + {{ block.settings.hamburger_line_spacing }}px)) rotate(45deg);
  }

  .ai-hamburger-menu__toggle-{{ ai_gen_id }}.active .ai-hamburger-menu__toggle-line-{{ ai_gen_id }}:nth-child(2) {
    opacity: 0;
  }

  .ai-hamburger-menu__toggle-{{ ai_gen_id }}.active .ai-hamburger-menu__toggle-line-{{ ai_gen_id }}:nth-child(3) {
    transform: translateY(calc(-{{ block.settings.hamburger_thickness }}px - {{ block.settings.hamburger_line_spacing }}px)) rotate(-45deg);
  }

  .ai-hamburger-menu__overlay-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    z-index: 999;
  }

  .ai-hamburger-menu__overlay-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
  }

  .ai-hamburger-menu__drawer-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    {% if block.settings.menu_position == 'left' %}
      left: 0;
      transform: translateX(-100%);
    {% else %}
      right: 0;
      transform: translateX(100%);
    {% endif %}
    width: {{ block.settings.menu_width }}%;
    max-width: 400px;
    height: 100%;
    background-color: {{ block.settings.menu_bg_color }};
    transition: transform 0.3s ease;
    z-index: 1000;
    overflow-y: auto;
  }

  .ai-hamburger-menu__drawer-{{ ai_gen_id }}.active {
    transform: translateX(0);
  }

  .ai-hamburger-menu__drawer-header-{{ ai_gen_id }} {
    padding: {{ block.settings.header_padding }}px;
    border-bottom: 1px solid {{ block.settings.menu_divider_color }};
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .ai-hamburger-menu__drawer-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.menu_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-hamburger-menu__close-{{ ai_gen_id }} {
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: {{ block.settings.text_color }};
  }

  .ai-hamburger-menu__close-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-hamburger-menu__nav-{{ ai_gen_id }} {
    padding: {{ block.settings.menu_padding }}px;
  }

  .ai-hamburger-menu__list-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-hamburger-menu__item-{{ ai_gen_id }} {
    border-bottom: 1px solid {{ block.settings.menu_divider_color }};
  }

  .ai-hamburger-menu__item-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-hamburger-menu__link-{{ ai_gen_id }} {
    display: block;
    padding: {{ block.settings.menu_item_padding }}px 0;
    color: {{ block.settings.menu_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.menu_item_size }}px;
    transition: color 0.2s ease;
  }

  .ai-hamburger-menu__link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.menu_text_hover_color }};
  }

  @media screen and (min-width: {{ block.settings.desktop_breakpoint }}px) {
    .ai-hamburger-menu__mobile-header-{{ ai_gen_id }} {
      display: none;
    }

    .ai-hamburger-menu__desktop-nav-{{ ai_gen_id }} {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: {{ block.settings.header_padding }}px;
      background-color: {{ block.settings.header_bg_color }};
    }

    .ai-hamburger-menu__desktop-list-{{ ai_gen_id }} {
      display: flex;
      list-style: none;
      padding: 0;
      margin: 0;
      gap: {{ block.settings.desktop_menu_spacing }}px;
    }

    .ai-hamburger-menu__desktop-item-{{ ai_gen_id }} {
      margin: 0;
    }

    .ai-hamburger-menu__desktop-link-{{ ai_gen_id }} {
      color: {{ block.settings.menu_text_color }};
      text-decoration: none;
      font-size: {{ block.settings.menu_item_size }}px;
      transition: color 0.2s ease;
    }

    .ai-hamburger-menu__desktop-link-{{ ai_gen_id }}:hover {
      color: {{ block.settings.menu_text_hover_color }};
    }
  }
{% endstyle %}

<hamburger-menu-{{ ai_gen_id }} class="ai-hamburger-menu-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
